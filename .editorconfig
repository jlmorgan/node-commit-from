# Reference: http://editorconfig.org
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Line length
max_line_length = 120

# Tab indentation
[*.js]
indent_style = space
indent_size = 2
